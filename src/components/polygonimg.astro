---
const { eventdata } = Astro.props;
---

<a href="#">
  <img
    src=`/billeder/${eventdata.eventimg}`
    alt=`${eventdata.slug}`
    class="polygonimg"
  />
</a>

<style>
  .polygonimg {
    width: 200px;
    aspect-ratio: 13/16;
    object-fit: cover;
    object-position: 0 0px;
  }
  a {
    width: 200px;
    clip-path: polygon(50% 0%, 90% 50%, 50% 100%, 10% 50%);
  }
  a:hover {
    opacity: 50%;
  }
  @media only screen and (min-width: 769px) {
    
  a:nth-of-type(1) {
    grid-column: 1/3;
    grid-row: 1/3;
    z-index: 0;
    align-self: center;
  }
  a:nth-of-type(4) {
    grid-column: 2/4;
    grid-row: 2/4;
    z-index: 0;
    align-self: center;
  }

  a:nth-of-type(2) {
    grid-column: 1/3;
    align-self: center;
  }

  a:nth-of-type(5),
  a:nth-of-type(6) {
    grid-column: 3/5;
    align-self: center;
  }

  a:nth-of-type(7) {
    grid-column: 4/6;
    align-self: center;
  }
  a:nth-of-type(3),
  a:nth-of-type(8) {
    grid-column: 5/7;
    align-self: center;
  }
  a:nth-of-type(5),
  a:nth-of-type(8) {
    grid-row: 1/3;
    z-index: 0;
  }
  a:nth-of-type(2),
  a:nth-of-type(3),
  a:nth-of-type(6),
  a:nth-of-type(9) {
    grid-row: 3/5;
    z-index: 0;
  }

  a:nth-of-type(7) {
    grid-row: 2/4;
    z-index: 0;
  }
  }

/* Mobile */
  @media only screen and (max-width: 768px) { 
    a {
      grid-column: 3/4;
      grid-row 1/2;
      z-index: 0;
    }
    a:nth-of-type(1),
    a:nth-of-type(4),
    a:nth-of-type(7)
     {
    grid-column: 2/4;
  }
  a:nth-of-type(2),
  a:nth-of-type(5),
  a:nth-of-type(8) {
    grid-column: 1/3;
  }
  a:nth-of-type(3),
  a:nth-of-type(6){
    grid-column: 3/5;
  }

/* rows */
  a:nth-of-type(1) {
    grid-row: 1/3;
    z-index: 0;
    justify-self: center;
  }

  a:nth-of-type(2),
  a:nth-of-type(3) {
    grid-row: 2/4;
    z-index: 0;
    justify-self: center;
  }
  a:nth-of-type(4) {
    grid-row: 3/5;
    z-index: 0;
    justify-self: center;
  }
  a:nth-of-type(5),
  a:nth-of-type(6){
    grid-row: 4/6;
    z-index: 0;
    justify-self: center;
  }
  a:nth-of-type(7) {
    grid-row: 5/7;
    z-index: 0;
    justify-self: center;
  }
  
  a:nth-of-type(8) {
    grid-row: 6/8;
    z-index: 0;
    justify-self: center;
  }
  }
</style>
