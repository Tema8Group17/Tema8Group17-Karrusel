---
const { ArtistImage, ArtistName } = Astro.props;
---

<div class="artist-card">
  <img
    class="artist-image"
    src={`/billeder/${ArtistImage}`}
    alt=`${ArtistName}`
  />
  <h2 class="artist-name">{ArtistName}</h2>
</div>

<style>
  /* Styling for container */
  .artist-card {
    position: relative;
    height: 100vh;
    width: 50vh;
    clip-path: polygon(0% 0%, 75% 0%, 100% 50%, 75% 100%, 0% 100%);
    overflow: hidden;
    aspect-ratio: 16 / 9;
  }

  .artist-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .artist-name {
    position: absolute;
    bottom: 20vh;
    left: 5vw;
    color: #ffffff;
    font-size: 2vw;
    font-family: sans-serif;
    letter-spacing: 2px;
    text-transform: uppercase;
    z-index: 1;
    aspect-ratio: 16 / 9;
  }

  @media (max-width: 768px) {
    .artist-image {
      clip-path: polygon(50% 0%, 90% 50%, 50% 100%, 10% 50%);
      width: 100%;
      height: 100%;
    }

    .artist-name {
      position: absolute;
      justify-content: center;
      align-items: center;
    }
  }
</style>
