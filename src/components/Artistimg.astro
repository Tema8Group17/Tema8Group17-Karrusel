---
const { artistdata } = Astro.props;
console.log(artistdata);
---

<a href={`artister/${artistdata.slug}`}>
  <img
    src=`/billeder/${artistdata.ArtistImage}`
    alt=`${artistdata.ArtistName}`
    class="polygonimg"
  />
</a>

<style>
  .polygonimg {
    width: 300px;
    aspect-ratio: 1/1;
    object-fit: cover;
    object-position: -70px 0;
  }
  a {
    width: 200px;
    clip-path: polygon(50% 0%, 90% 50%, 50% 100%, 10% 50%);
    grid-column: span 2;
    grid-row: span 2;

    justify-self: center;
  }
  a:hover {
    opacity: 50%;
  }
</style>
