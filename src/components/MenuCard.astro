---
const header = Astro.props.header;
const src = Astro.props.src;
const href = Astro.props.href;
---

<a href={href}>
    <img class="menu-image" {src} alt="">
    <h3>{header}</h3>
</a>

<style>
      a {
      display: grid;  
      grid-template-columns: 1fr;
      grid-template-rows: 1fr;
      text-decoration: none;
    }
    .menu-image {
        grid-column: 1/2;
        grid-row: 1 / 2;
        object-fit: cover;
        width: 100%;
        height: 523px;
    }

    .menu-image:hover {
        filter: grayscale(80%)
    } 
    h3 {
    grid-column: 1/2;
    grid-row: 1 / 2;
    z-index: 1;
    text-align: center;
    font-family: 'Morsan', sans-serif;
    font-size: 30px;
    font-weight: 400;
    color: #fffff0;
   
    }
    @media (max-width: 799px) {
    a {
        span 1;
    }
    }
</style>